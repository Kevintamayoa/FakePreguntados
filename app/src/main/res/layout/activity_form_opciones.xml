<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".form_opciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Configuración"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temas:"
            android:textColor="#000000"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/todos_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:checked="true"
            android:text="Todos" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <CheckBox
            android:id="@+id/historia_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Historia"
            android:checked="true"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <CheckBox
            android:id="@+id/geografia_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Geografía"
            android:checked="true"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <CheckBox
            android:id="@+id/idiomas_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Idiomas"
            android:checked="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <CheckBox
            android:id="@+id/ciencias_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ciencias"
            android:checked="true"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <CheckBox
            android:id="@+id/deportes_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Deportes"
            android:checked="true"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <CheckBox
            android:id="@+id/entretenimiento_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Entretenimiento"
            android:checked="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <CheckBox
            android:id="@+id/matematicas_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Matemáticas"
            android:checked="true"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <CheckBox
            android:id="@+id/arte_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Arte"
            android:checked="true"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Número de preguntas:"
            android:textSize="14dp" />

        <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
            android:id="@+id/numpreguntas_scroll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:snp_buttonIconLeft="@drawable/ic_chevron_left_black_24dp"
            app:snp_buttonIconRight="@drawable/ic_chevron_right_black_24dp"
            app:snp_maxValue="40"
            app:snp_minValue="5"
            app:snp_stepSize="1"
            app:snp_updateInterval="1"
            app:snp_value="15"></com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="10dp"
        android:background="#262626"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Dificultad"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffff"
            android:gravity="center">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/dificil_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Dificil" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/media_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Media" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/facil_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="Fácil" />
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <Switch
            android:id="@+id/cheat_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:text="Habilitar cheats   " />

        <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:snp_buttonIconLeft="@drawable/ic_chevron_left_black_24dp"
            app:snp_buttonIconRight="@drawable/ic_chevron_right_black_24dp"
            app:snp_maxValue="40"
            app:snp_minValue="5"
            app:snp_stepSize="1"
            app:snp_updateInterval="1"
            app:snp_value="3"></com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker>

    </LinearLayout>
</LinearLayout>