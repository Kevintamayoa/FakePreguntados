<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".preguntas">

    <!-- Numero de pregunta y cheat button -->
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center|left"
            android:text="1/10"
            android:layout_marginLeft="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginRight="84dp"
            android:layout_gravity="center|right"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:text="CHEAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Botones de traslado y pregunta -->
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Prev"
            android:layout_gravity="center"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Pregunta numero 1 es sobre ..."
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="Sig"
            android:layout_gravity="center"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Botones de respuesta -->
    <LinearLayout
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            style="@style/Base.Widget.AppCompat.Button"
            android:src="@drawable/ic_check_green_24dp"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_height="wrap_content" />
        <ImageButton
            style="@style/Base.Widget.AppCompat.Button"
            android:src="@drawable/ic_clear_red_24dp"
            android:layout_marginHorizontal="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>