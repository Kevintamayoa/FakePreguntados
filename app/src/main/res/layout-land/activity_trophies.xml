<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".TrofeosActivity">

    <ImageView
        android:src="@drawable/ic_sportive_trophy_cup"
        android:id="@+id/image_trophies"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:layout_marginStart="48dp"
        android:contentDescription="@string/img_trophies"
        android:tint="#FFD700"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:drawableStart="@drawable/ic_gold_medal_24"
            android:id="@+id/primer_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1er lugar. "
            android:textSize="24sp" />

        <TextView
            android:drawableStart="@drawable/ic_silver_medal_24"
            android:id="@+id/segundo_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2do lugar. "
            android:textSize="24sp" />

        <TextView
            android:drawableStart="@drawable/ic_bronze_medal_24"
            android:id="@+id/tercer_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="3er lugar. "
            android:textSize="24sp" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="12dp" />
        <View
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="12dp" />
        <TextView
            android:id="@+id/cuarto_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="4to lugar. "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/quinto_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="5to lugar. "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/sexto_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="6to lugar. "
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>