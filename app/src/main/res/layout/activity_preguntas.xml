<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PreguntasActivity">

    <!-- Numero de pregunta y cheat button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/num_pregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/10" />

        <Space
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:layout_marginRight="18dp"/>
        <Button
            android:id="@+id/endQuizz_btn"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="Finalizar"/>
        <Space
            android:layout_width="24dp"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/cheat_activity_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHEAT" />
    </LinearLayout>

    <!-- Botones de traslado y pregunta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ant_pregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/non_desc"
            android:src="@drawable/ic_chevron_left_black_24dp" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/texto_pregunta"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pregunta numero 1 sobre" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/sig_pregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/non_desc"
            android:src="@drawable/ic_chevron_right_black_24dp" />
    </LinearLayout>

    <!-- Botones de respuesta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/correct_button"
            style="@style/Base.Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/non_desc"
            android:src="@drawable/ic_check_green_24dp" />

        <Space
            android:layout_width="24dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/incorrect_button"
            style="@style/Base.Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/non_desc"
            android:src="@drawable/ic_clear_red_24dp" />
    </LinearLayout>

</LinearLayout>